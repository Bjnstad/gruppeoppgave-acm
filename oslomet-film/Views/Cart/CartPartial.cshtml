@model List<oslomet_film.Model.CartItem>
<!-- In use -->
<a>
    <span class="cart-icon">
        @Model.Count()
    </span>
    <span class="glyphicon glyphicon-shopping-cart"></span>
</a>

<div class="cart-popout-open hide">
    <h3>
        Handlekurv
    </h3>
    <hr />
    <div style="max-height: 460px; overflow: hidden scroll">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col col-md-3">
                    <img src="@item.Movie.Thumbnail" class="thumbnail-small" />
                </div>
                <div class="col col-md-5">
                    <h5>
                        <b>
                            @item.Movie.Title
                        </b>
                    </h5>
                    <p>
                        @item.Price,-
                    </p>
                </div>
                <div class="col col-md-4">
                    <a href="@Url.Action("RemoveItem", "Cart", new { movieID = item.Movie.ID})" class="btn btn-primary btn-block" id="#">
                        Fjern
                    </a>
                </div>
                <hr />
            </div>
        }
        <h4>
            <b>
                TOTALT: @ViewBag.Total ,-
            </b>
        </h4>

        <hr />
        <a href="@Url.Action("Index", "Cart")" class="btn btn-primary btn btn-block" id="#">
            Vis Handlekurv
        </a>
    </div>
</div>