@model List<oslomet_film.Model.CartItem>

<a>
    <span class="cart-icon">
        @Model.Count()
    </span>
    <span class="glyphicon glyphicon-shopping-cart"></span>
</a>

<div class="cart-popout" style="display: none;">

    <h3>
        Handlekurv
    </h3>
    
    <hr />

    <div style="max-height: 300px; overflow: hidden scroll">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col col-md-3">
                    <img src="@item.Movie.Thumbnail" class="thumbnail-small"/>
                </div>
                <div class="col col-md-9">
                    <h5>
                        <b>
                            @item.Movie.Title
                        </b>
                    </h5>
                    <p>
                        @item.Price,-
                    </p>
                </div>
            </div>
            <hr />
        }
    </div>
    <h4>
        <b>
            TOTALT: @ViewBag.Total ,-
            <a href="/checkout" class="btn btn-success" id="buy-movies">
                Gå til kassen
            </a>
        </b>
    </h4>
</div>