@model List<oslomet_film.Model.CartItem>



<a>
    <span class="cart-icon">
        @Model.Count()
    </span>
    <span class="glyphicon glyphicon-shopping-cart"></span>
</a>

<div class="cart-popout" style="display: none;">

    <h3>
        Handlekurv
    </h3>
    
    <hr />

    <div style="max-height: 300px; overflow: scroll;">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col col-md-4">
                    <img src="@item.Movie.Thumbnail" />
                </div>
                <div class="col col-md-8">
                    <p>
                        @item.Movie.Title
                    </p>
                    <p>
                        @item.Price
                    </p>
                    <hr />
                </div>
            </div>
        }
    </div>

    <a href="/checkout" class="btn btn-success" id="buy-movies">
        Gå til kassen
    </a>
</div>