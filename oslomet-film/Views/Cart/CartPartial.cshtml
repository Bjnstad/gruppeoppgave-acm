@model List<oslomet_film.Model.CartItem>

@Model.Count()


<div class="cart-popout" style="display: none;">
    
    <h3>
        Handlekurv
    </h3>


    @foreach (var item in Model)
    {
        <div>
            <p>@item.Movie.Title</p>
            <p>@item.Price</p>
        </div>
    }

    <a href="/checkout" class="btn btn-success" id="buy-movies">
        Gå til kassen
    </a>
</div>