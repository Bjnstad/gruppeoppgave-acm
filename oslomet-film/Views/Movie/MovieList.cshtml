@model System.Collections.Generic.List<oslomet_film.Model.Movie>

<div class="row" id="movies">
    @foreach (var movie in Model)
    {
        <div class="col col-md-3 col-xs-6">
            <a href="" data-toggle="modal" data-target="#exampleModal">
                <div id="@movie.ID" class="movie-thumbnail" style="background-image: url('@movie.Thumbnail')">
                    <h3>
                        @movie.Title
                    </h3>
                    <br />
                    <p>
                        @movie.Price
                    </p>
                    <br />
                    <p>
                        @movie.Description
                    </p>
                </div>
            </a>
        </div>
    }
</div>
